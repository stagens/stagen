{% macro GamesListGenres(genres) %}
    {% if genres.length > 0 %}
        <div class="info-genres">
            <ul>
                {% for _, genre in genres %}
                    <li>{{ genre }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endmacro %}
