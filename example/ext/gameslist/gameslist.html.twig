{% macro GamesListTable(db) %}
    <div class="gameslist">
        <div class="items">
            {% for item in db.data %}
                <div class="item">
                    <a href="{{ item.url }}" target="_blank">
                        <img src="{{ item.image }}" alt="{{ item.title }}"/>
                    </a>
                    <div class="info">
                        <div class="info-title">
                            <a id="game-{{ item.id }}" href="#game-{{ item.id }}">
                                #
                            </a>
                            <a href="{{ item.url }}" target="_blank">
                                {{ item.title }}
                            </a>
                        </div>
                        <div class="info-year">
                            {{ item.year }}
                        </div>
                        {{ GamesListGenres(item.genres) }}
                        {{ GamesListRating(item.rating) }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endmacro %}
