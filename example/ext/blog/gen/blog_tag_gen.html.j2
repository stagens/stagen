{% extends "base" %}

{% block main %}
    {% set tag = undefined %}
    {% for tag_object in databases.blog_tags.data %}
        {% if tag_object.id == id %}
            {% do tag = tag_object %}
            {% break %}
        {% endif %}
    {% endfor %}
    <section class="card">
        <!-- agg_dict.name id pages_names -->
        {% if tag %}
            <h1>{{ tag.title.ru }}</h1>
        {% else %}
            <h1>{{ id }}</h1>
        {% endif %}

        <ul>
            {% for page_name in pages_names %}
                {% set p = pages[page_name] %}
                <li>
                    <a href="{{ p.uri }}">{{ p.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
