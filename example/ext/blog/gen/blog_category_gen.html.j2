{% extends "base" %}

{% block main %}
    {% set category = undefined %}
    {% for category_object in databases.blog_categories.data %}
        {% if category_object.id == id %}
            {% do category = category_object %}
            {% break %}
        {% endif %}
    {% endfor %}
    <section class="card">
        <!-- agg_dict.name id pages_names -->
        {% if category %}
            <h1>{{ category.title.ru }}</h1>
        {% else %}
            <h1>{{ id }}</h1>
        {% endif %}

        <ul>
            {% for page_name in pages_names %}
                {% set p = pages[page_name] %}
                <li>
                    <a href="{{ p.uri }}">{{ p.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
