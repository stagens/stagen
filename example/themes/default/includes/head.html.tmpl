{{- define "head" }}
<meta charset="utf-8"/>
<meta name="description" content="{{ if .Page.meta_description -}}{{ .Page.meta_description }}{{ else }}{{ if .Site.Description -}}{{ .Site.Description }}{{ end -}}{{ end -}}">
<meta name="keywords" content="{{ if .Page.meta_description -}}{{ .Page.meta_keywords }}{{ end -}}">
<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="default">
<title>{{ .Page.Title }}</title>
{{ end -}}
